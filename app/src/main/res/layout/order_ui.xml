<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="398dp"
        android:layout_height="67dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="-16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:id="@+id/linearLayout"
        android:layout_marginLeft="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteX="-39dp">

        <Styling.BoldCurlFont
            android:id="@+id/tv_title_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/head_pad_size"
            android:gravity="center_vertical"
            android:text="@string/lbl_program"
            android:background="@drawable/rounded_border"
            android:textColor="@color/colorDYellow"
            android:textSize="@dimen/ins_size" />


    </LinearLayout>


    <!-- Footer aligned to bottom -->

    <ListView
        android:id="@+id/lv_main"
        android:layout_width="354dp"
        android:layout_height="451dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="-43dp"
        android:paddingRight="10dp"
        android:divider="@drawable/amsk_divider"
        android:dividerHeight="2dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

    </ListView>

    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="368dp"
        android:layout_height="46dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorDYellow"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lv_main"
        app:layout_constraintVertical_bias="1.0">

        <ImageView
            android:id="@+id/iv_bitlogo"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@drawable/bit_logo" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="@string/copyright_text"
            android:textColor="#000"
            android:textSize="15sp" />


    </LinearLayout>


</android.support.constraint.ConstraintLayout>
